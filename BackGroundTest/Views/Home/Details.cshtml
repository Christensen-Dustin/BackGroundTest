@{ 
    ViewData["Title"] = "Details Page";
}

    <div id="details">
        <div class="card-deck">
            @for (int i = 0; i < 6; i++)
            {
                <div class="card m-3" style="min-width:20.5%; max-width:30.5%; background-color: lavender">
                    <div class="card-header">
                        <h3>Employee Name</h3>
                    </div>
                    <!--ASP-APPEND-VERSION allows the image to be pulled from the CACHE if not changed, from the server if changed-->
                    <img class="card-img-top imageThumbNail" src="~/images/joshua-tree-leather-journal.jpg" asp-append-version="true" />
                    <div class="card-footer text-center" style="background-color: lightgray">
                        <!--Tag Helper-->
                        <a href="#" class="btn btn-primary m-1">View</a>
                        <a href="#" class="btn btn-primary m-1">Edit</a>
                        <a href="#" class="btn btn-danger m-1">Delete</a>
                    </div>
                </div>
             }
        </div>

    </div>
